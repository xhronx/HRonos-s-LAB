groups: 
- name: test
  rules:

  - alert: SiteStatusChanged
    expr: probe_http_status_code != 200
    for: 0m
    labels:
      severity: critical
    annotations:
      summary: SiteStatusChanged (instance {{ $labels.instance }})
      description: "SiteStatusChanged\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}"

  - alert: DelayExceeds5Seconds
    expr: avg_over_time(probe_duration_seconds[1m]) > 5
    for: 1m
    labels:
      severity: warning
    annotations:
      summary: DelayExceeds5Seconds (instance {{ $labels.instance }})
      description: "DelayExceeds5Seconds\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}"

  - alert: ServerRebootedOrDown 
    expr: up == 0
    for: 0m
    labels:
      severity: critical
    annotations:
      summary: "ServerRebootedOrDown (instance {{ $labels.instance }})"
      description: "ServerRebootedOrDown\n VALUE = {{ $value }}\n  LABELS: {{ $labels }}"